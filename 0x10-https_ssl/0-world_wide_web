#!/usr/bin/env bash
# This script displays information about subdomains.

# Check if the required arguments are provided
if [ "$#" -lt 1 ]; then
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi

domain="$1"
subdomain="$2"

# Function to display information about a subdomain
display_info() {
    local record_type
    local destination
    record_type=$(dig +short "$subdomain.$domain" | awk '{print $3}')
    destination=$(dig +short "$subdomain.$domain" | awk '{getline; print}')
    echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

# If subdomain is not provided, display information for default subdomains
if [ -z "$subdomain" ]; then
    subdomains=("www" "lb-01" "web-01" "web-02")
else
    subdomains=("$subdomain")
fi

# Iterate over the subdomains and display information
display_subdomains_info() {
    for sub in "${subdomains[@]}"; do
        display_info "$sub"
    done
}

# Call the function to display subdomain information
display_subdomains_info
