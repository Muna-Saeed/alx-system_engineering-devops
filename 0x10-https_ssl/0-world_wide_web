#!/usr/bin/env bash
# Function to get the record information for a subdomain
get_record_info() {
    local subdomain=$1
    local domain=$2

    # Using dig to get the DNS information for the subdomain
    dig_output=$(dig ${subdomain}.${domain} | grep -A1 'ANSWER SECTION:')

    # Extract record type and destination IP from dig output using awk
    record_type=$(echo "${dig_output}" | awk '/IN\s+[A-Z]+/{print $4}')
    destination=$(echo "${dig_output}" | awk '/IN\s+[A-Z]+/{print $5}')

    # Display the information
    echo "The subdomain ${subdomain} is a ${record_type} record and points to ${destination}"
}

# Main script
main() {
    local domain=$1
    local subdomains=("www" "lb-01" "web-01" "web-02")

    # Loop through default subdomains and display information
    for sub in "${subdomains[@]}"; do
        get_record_info "${sub}" "${domain}"
    done
}

# Check for correct number of arguments
if [ "$#" -ne 1 ]; then
    echo "Usage: $0 <domain>"
    exit 1
fi

# Call the main function with the provided domain
main "$1"
