#!/usr/bin/env bash
# This script displays information about subdomains.

# retrieve and display information about a specific subdomain
check_subdomain() {
    domain=$1
    subdomain=$2
    record=$(dig $subdomain.$domain | awk '/^'${subdomain}.${domain}'\./ {print $4}')
    echo "The subdomain $subdomain is a A record and points to $record"
}

if [ -z "$2" ]; then
    check_subdomain $1 www
    check_subdomain $1 lb-01
    check_subdomain $1 web-01
    check_subdomain $1 web-02
else
    check_subdomain $1 $2
fi
